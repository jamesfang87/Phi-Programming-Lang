// Simple functions test - uses only basic implemented features
// No function calls, just basic declarations and simple statements

fun add_two_numbers(a: i64, b: i64) -> i64 {
    let sum: i64 = a + b;
    return sum;
}

fun simple_if_test(value: i64) -> i64 {
    if (value > 10) {
        return value * 2;
    } else {
        return value + 5;
    }
}

fun basic_while_loop() -> i64 {
    let counter: i64 = 0;
    while (counter < 3) {
        counter = counter + 1;
    }
    return counter;
}

fun basic_for_loop() -> i64 {
    let total: i64 = 0;
    for i in 1..5 {
        total = total + 1;
    }
    return total;
}

fun no_return_type_function() {
    let message: str = "hello";
    return;
}

fun boolean_operations(flag: bool) -> bool {
    let result: bool = flag && true;
    return result;
}

fun arithmetic_test() -> i64 {
    let a: i64 = 10;
    let b: i64 = 5;
    let sum: i64 = a + b;
    let diff: i64 = a - b;
    let prod: i64 = a * b;
    let quot: i64 = a / b;
    return sum;
}

fun string_variable_test() -> str {
    let greeting: str = "Hello World";
    return greeting;
}

fun float_operations() -> f64 {
    let pi: f64 = 3.14;
    let radius: f64 = 2.0;
    let area: f64 = pi * radius * radius;
    return area;
}
